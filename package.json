{
  "name": "sveltevietnam",
  "private": true,
  "author": {
    "email": "developers@sveltevietnam.dev",
    "name": "Svelte Vietnam",
    "url": "https://sveltevietnam.dev"
  },
  "packageManager": "pnpm@8.7.1",
  "engines": {
    "pnpm": ">=8.7.0",
    "node": ">=18.0.0"
  },
  "volta": {
    "node": "18.17.1",
    "pnpm": "8.7.1"
  },
  "scripts": {
    "turbo": "turbo",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint --parallel",
    "format": "turbo run format --parallel",
    "test:ci": "turbo run test:ci --parallel",
    "dts": "turbo run dts --parallel",
    "setup": "pnpm install && pnpm dts",
    "prepare": "husky install",
    "ci:version": "changeset version && pnpm install --no-frozen-lockfile",
    "ci:publish": "pnpm build && changeset publish && pnpm install"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vnphanquang/eslint-config": "^2.0.0",
    "@vnphanquang/prettierrc": "^1.0.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-svelte": "^2.33.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "3.0.0",
    "prettier-plugin-svelte": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "stylelint": "^15.10.3",
    "stylelint-config-clean-order": "^5.2.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^34.0.0",
    "tslib": "^2.6.2",
    "turbo": "^1.10.13",
    "typescript": "^5.2.2",
    "wrangler": "^3.8.0"
  }
}
