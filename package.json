{
  "name": "sveltevietnam.dev",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "pnpm simple-git-hooks && pnpm partytown",
    "dev": "vite dev",
    "build": "vite build --mode production",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
