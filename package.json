    "postcss": "^8.4.21",
    "postcss-html": "^1.5.0",
    "postcss-import": "^15.1.0",
    "postcss-load-config": "^4.0.1",
    "postcss-mixins": "^9.0.4",
    "postcss-nesting": "^11.1.0",
    "prettier": "^2.8.3",
    "prettier-plugin-svelte": "^2.9.0",
    "prettier-plugin-tailwindcss": "^0.2.2",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^14.16.1",
