    "lint": "run-p lint:*",
    "lint:code": "eslint .",
    "lint:style": "stylelint \"**/*.svelte\" \"**/*.css\"",
    "format": "prettier --plugin-search-dir . --write .",
    "partytown": "partytown copylib static/~partytown"
  },
  "dependencies": {
    "@builder.io/partytown": "^0.7.4",
    "cookie": "^0.5.0",
