{
	"name": "@sveltevietnam/i18n",
	"version": "1.0.0-next",
	"description": "i18n automation for sveltevietnam.dev projects",
	"private": true,
	"module": "src/index.js",
	"main": "src/index.js",
	"types": "types/index.d.ts",
	"type": "module",
	"bin": "./src/cli.js",
	"exports": {
		".": {
			"types": "./types/index.d.ts",
			"import": "./src/index.js",
			"default": "./src/index.js"
		},
		"./language": {
			"types": "./types/index.d.ts",
			"import": "./src/language.js",
			"default": "./src/language.js"
		},
		"./utils": {
			"types": "./types/index.d.ts",
			"import": "./src/utils/index.js",
			"default": "./src/utils/index.js"
		},
		"./vite": {
			"types": "./types/index.d.ts",
			"import": "./src/vite.js",
			"default": "./src/vite.js"
		},
		"./runtime": {
			"types": "./types/index.d.ts",
			"import": "./src/runtime/index.js",
			"default": "./src/runtime/index.js"
		},
		"./runtime/factory": {
			"types": "./types/index.d.ts",
			"import": "./src/runtime/factory.js",
			"default": "./src/runtime/factory.js"
		}
	},
	"publishconfig": {
		"access": "public",
		"provenance": true
	},
	"files": [
		"src",
		"types"
	],
	"license": "mit",
	"author": {
		"email": "developers@sveltevietnam.dev",
		"name": "Svelte Vietnam",
		"url": "https://github.com/sveltevietnam"
	},
	"homepage": "https://www.sveltevietnam.dev",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sveltevietnam/sveltevietnam.dev.git",
		"directory": "packages/i18n"
	},
	"bugs": {
		"url": "https://github.com/sveltevietnam/sveltevietnam.dev/issues"
	},
	"keywords": [
		"locale",
		"language",
		"internationalization",
		"i18n",
		"svelte",
		"sveltekit"
	],
	"scripts": {
		"prepublishOnly": "dts-buddy && publint",
		"dts": "dts-buddy && publint",
		"lint": "run-p lint:*",
		"lint:svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint:es": "eslint .",
		"lint:style": "stylelint '**/*.{svelte,css}'",
		"format": "prettier --write --ignore-path=../../.prettierignore --config=../../prettier.config.js .",
		"json-schema": "node src/here-be-dragon/parser/schema/json-schema.js"
	},
	"peerDependencies": {
		"svelte": "^5.38.6",
		"vite": "^7.1.4"
	},
	"devDependencies": {
		"@valibot/to-json-schema": "^1.3.0",
		"svelte": "^5.41.0",
		"vite": "^7.1.10"
	},
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"commander": "^14.0.1",
		"dedent": "^1.7.0",
		"picocolors": "^1.1.1",
		"tiny-glob": "^0.2.9",
		"typescript": "^5.9.3",
		"valibot": "1.1.0",
		"yaml": "^2.8.1"
	},
	"volta": {
		"extends": "../../package.json"
	}
}
