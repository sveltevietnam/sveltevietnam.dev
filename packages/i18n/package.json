{
	"name": "@sveltevietnam/i18n",
	"version": "0.1.0",
	"description": "i18n automation for sveltevietnam.dev projects",
	"module": "src/runtime/index.js",
	"main": "src/runtime/index.js",
	"types": "types/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./types/index.d.ts",
			"import": "./src/runtime/index.js",
			"default": "./src/runtime/index.js"
		},
		"./static": {
			"types": "./types/index.d.ts",
			"import": "./src/runtime/static.js",
			"default": "./src/runtime/static.js"
		},
		"./generated": {
			"types": "./types/index.d.ts",
			"import": "./src/runtime/generated.js",
			"default": "./src/runtime/generated.js"
		},
		"./factory": {
			"types": "./types/index.d.ts",
			"import": "./src/factory/index.js",
			"default": "./src/factory/index.js"
		},
		"./utils": {
			"types": "./types/index.d.ts",
			"import": "./src/utils/index.js",
			"default": "./src/utils/index.js"
		},
		"./vite": {
			"types": "./types/index.d.ts",
			"import": "./src/vite/index.js",
			"default": "./src/vite/index.js"
		}
	},
	"publishconfig": {
		"access": "public",
		"provenance": true
	},
	"files": [
		"src",
		"types",
		"CHANGELOG.md",
		"!**/tests",
		"!**/*.test.ts",
		"!**/*.test.js",
		"!**/__screenshots__",
		"!**/__snapshots__"
	],
	"license": {
		"type": "MIT",
		"url": "https://github.com/sveltevietnam/sveltevietnam.dev/blob/main/LICENSE"
	},
	"author": {
		"email": "developers@sveltevietnam.dev",
		"name": "Svelte Vietnam",
		"url": "https://github.com/sveltevietnam"
	},
	"homepage": "https://www.sveltevietnam.dev",
	"funding": {
		"type": "opencollective",
		"url": "https://opencollective.com/sveltevietnam"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sveltevietnam/sveltevietnam.dev.git",
		"directory": "packages/i18n"
	},
	"bugs": {
		"url": "https://github.com/sveltevietnam/sveltevietnam.dev/issues"
	},
	"keywords": [
		"locale",
		"language",
		"internationalization",
		"i18n",
		"svelte",
		"sveltekit",
		"remote"
	],
	"scripts": {
		"prepublishOnly": "dts-buddy && publint",
		"dts": "dts-buddy && publint",
		"lint": "run-p lint:*",
		"lint:svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint:es": "eslint .",
		"lint:style": "stylelint '**/*.{svelte,css}'",
		"format": "prettier --write --ignore-path=../../.prettierignore --config=../../prettier.config.js .",
		"json-schema": "node src/parser/schema/json-schema.js",
		"test:unit:buildtime": "vitest run --project buildtime",
		"test:unit:runtime:ssr": "vitest run --project runtime-ssr",
		"test:unit:runtime:browser": "vitest run --project runtime-browser --browser.headless",
		"test:unit": "vitest run --browser.headless --coverage",
		"test:e2e": "pnpm -r --workspace-concurrency 1 --filter=\"./tests/**\" test",
		"test": "run-p test:unit test:e2e"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/sanitize-html": "^2.16.0",
		"@valibot/to-json-schema": "^1.3.0",
		"svelte": "^5.43.0",
		"vite": "^7.1.12",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"dependencies": {
		"dedent": "^1.7.0",
		"import-meta-resolve": "^4.2.0",
		"picocolors": "^1.1.1",
		"sanitize-html": "^2.17.0",
		"tiny-glob": "^0.2.9",
		"typescript": "^5.9.3",
		"valibot": "1.1.0",
		"yaml": "^2.8.1"
	},
	"volta": {
		"extends": "../../package.json"
	}
}
