{
	"name": "recruit.sveltevietnam.dev",
	"version": "V1",
	"description": "Management app for job postings at sveltevietnam.dev",
	"private": true,
	"type": "module",
	"scripts": {
		"boot:env": "shx cp .env.example .env",
		"dev": "vite dev --port 5007",
		"dev:wrangler": "wrangler dev --port 5007 --persist-to=../../workers/backend/.wrangler/state",
		"dev:wrangler:test": "wrangler dev --port 5007 --persist-to=../../workers/backend/.wrangler/state --env test",
		"build:i18n": "pnpm i18n build 'src/**/locales'",
		"build": "svelte-kit sync && vite build",
		"build:test": "svelte-kit sync && CLOUDFLARE_ENV=test vite build --mode test",
		"deploy": "wrangler deploy",
		"preview": "vite preview",
		"lint": "run-p lint:*",
		"lint:i18n": "pnpm i18n lint 'src/**/locales'",
		"lint:svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint:es": "svelte-kit sync && eslint .",
		"lint:style": "stylelint '**/*.{svelte,css}'",
		"test:uat": "playwright test"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250903.0",
		"@faker-js/faker": "^10.0.0",
		"@floating-ui/dom": "^1.7.4",
		"@svelte-put/async-stack": "^1.5.1",
		"@svelte-put/cloudflare-turnstile": "^1.2.0",
		"@svelte-put/inline-svg": "^4.0.1",
		"@svelte-put/preprocess-external-link": "^1.0.0",
		"@sveltejs/adapter-cloudflare": "^7.2.3",
		"@sveltejs/enhanced-img": "^0.8.1",
		"@sveltejs/kit": "^2.37.0",
		"@sveltejs/vite-plugin-svelte": "^6.1.4",
		"@sveltevietnam/backend": "workspace:*",
		"@sveltevietnam/css": "workspace:*",
		"@sveltevietnam/i18n": "workspace:*",
		"@sveltevietnam/kit": "workspace:*",
		"@sveltevietnam/routes": "workspace:*",
		"@tailwindcss/vite": "4.1.12",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/lodash.debounce": "^4.0.9",
		"@types/sanitize-html": "^2.16.0",
		"@types/umami-browser": "^2.13.0",
		"picocolors": "^1.1.1",
		"svelte": "^5.38.6",
		"sveltekit-superforms": "^2.27.1",
		"tailwindcss": "4.1.12",
		"vite": "^7.1.4",
		"vite-imagetools": "^8.0.0",
		"vite-node": "^3.2.4",
		"vite-plugin-qrcode": "^0.3.0"
	},
	"dependencies": {
		"@lexical/dragon": "^0.36.2",
		"@lexical/extension": "^0.36.2",
		"@lexical/history": "^0.36.2",
		"@lexical/html": "^0.36.2",
		"@lexical/link": "^0.36.2",
		"@lexical/list": "^0.36.2",
		"@lexical/rich-text": "^0.36.2",
		"@lexical/selection": "^0.36.2",
		"@lexical/text": "^0.36.2",
		"@lexical/utils": "^0.36.2",
		"better-auth": "^1.3.7",
		"drizzle-orm": "^0.44.5",
		"lexical": "^0.36.2",
		"lodash.debounce": "^4.0.8",
		"sanitize-html": "^2.17.0",
		"valibot": "1.1.0"
	},
	"volta": {
		"extends": "../../package.json"
	}
}
