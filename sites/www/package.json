{
	"name": "@sites/www",
	"version": "1.0.0-next.42",
	"author": {
		"email": "developers@sveltevietnam.dev",
		"name": "Svelte Vietnam",
		"url": "https://www.sveltevietnam.dev"
	},
	"description": "Svelte Vietnam official website",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 5005",
		"dev:wrangler": "wrangler pages dev .svelte-kit/cloudflare --port 5005 --config ../../internals/db/wrangler.toml --persist-to ../../internals/db/.wrangler/state/v3",
		"build": "vite build --mode production",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "run-p lint:*",
		"lint:es": "eslint . --ignore-path=\"../../.eslintignore\"",
		"lint:style": "stylelint '**/*.{svelte,css}'",
		"format": "prettier --ignore-path ../../.prettierignore --write './**/*.{js,ts,mjs,cjs,json,svelte,css,md}'",
		"post:create": "hygen post create"
	},
	"dependencies": {
		"@floating-ui/dom": "^1.6.3",
