{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"dts": {
			"dependsOn": ["^dts"],
			"inputs": ["src/**/*.js", "*.config.js", "src/**/*.ts"],
			"outputs": ["types/**"],
			"cache": true
		},
		"test:ci": {
			"dependsOn": ["^test:ci", "dts"],
			"outputs": ["coverage/**"],
			"cache": true
		},
		"build": {
			"dependsOn": ["^build", "^dts"],
			"outputs": [".svelte-kit/**"],
			"inputs": [
				"*.config.js",
				"src/**/*.ts",
				"src/**/*.js",
				"src/**/*.svelte",
				"src/**/*.css",
				"src/**/*.json"
			]
		},
		"lint": {
			"outputs": []
		},
		"format": {
			"outputs": []
		},
		"dev": {
			"dependsOn": ["@sveltevietnam/ui#build", "@internals/isc#dts", "@internals/utils#dts"],
			"outputs": ["**/*.dist.json", "types/index.d.ts"],
			"cache": false,
			"persistent": true
		}
	}
}
