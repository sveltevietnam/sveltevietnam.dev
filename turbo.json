{
	"$schema": "https://turborepo.org/schema.json",
	"ui": "stream",
	"tasks": {
		"prepublishOnly": {},
		"dts": {
			"dependsOn": ["^dts"],
			"inputs": ["*.config.js", "*.config.ts", "src/**/*.js", "src/**/*.ts"],
			"outputs": ["types/index.d.ts", "types/index.d.ts.map"],
			"cache": true
		},
		"deploy": {
			"dependsOn": ["^build"],
			"env": ["VITE_*", "CLOUDFLARE_*"],
			"outputs": ["dist/**", ".svelte-kit/**"]
		},
		"build": {
			"dependsOn": ["^build"],
			"env": ["VITE_*", "CLOUDFLARE_*"],
			"outputs": ["dist/**", "build/**", ".svelte-kit/**"],
			"inputs": [
				"wrangler.json",
				"wrangler.jsonc",
				"*.config.js",
				"*.config.ts",
				"src/**/*.ts",
				"src/**/*.js",
				"src/**/*.svelte",
				"src/**/*.css",
				"src/**/*.json",
				"**/*.html"
			]
		},
		"lint": {
			"outputs": []
		},
		"format": {
			"outputs": []
		},
		"dev": {
			"dependsOn": ["^build", "^dts"],
			"cache": false,
			"persistent": true
		},
		"boot:env": {
			"outputs": []
		}
	}
}
