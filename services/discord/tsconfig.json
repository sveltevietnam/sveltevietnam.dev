{
  "include": ["./src/**/*.js", "./src/**/*.ts"],
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["@types", "node_modules/@types"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "sourceMap": true,
    "strict": true
  }
}
