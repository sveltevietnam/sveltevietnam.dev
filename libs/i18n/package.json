{
	"name": "@internals/i18n",
	"version": "1.0.0-next.0",
	"description": "i18n automation for sveltevietnam.dev projects",
	"private": true,
	"module": "src/index.js",
	"types": "types/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./types/index.d.ts",
			"import": "./src/index.js"
		},
		"./utils": {
			"types": "./types/index.d.ts",
			"import": "./src/utils/index.js"
		},
		"./vite": {
			"types": "./types/index.d.ts",
			"import": "./src/vite.js"
		},
		"./runtime": {
			"types": "./types/index.d.ts",
			"import": "./src/runtime/index.js"
		},
		"./T.svelte": {
			"types": "./src/runtime/T.svelte.d.ts",
			"svelte": "./src/runtime/T.svelte"
		}
	},
	"files": [
		"src",
		"types"
	],
	"scripts": {
		"test": "vitest --ui --coverage",
		"test:ci": "vitest run --coverage",
		"dts": "dts-buddy && publint",
		"lint": "run-p lint:*",
		"lint:svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint:es": "eslint .",
		"lint:style": "stylelint '**/*.{svelte,css}'",
		"format": "prettier --write ."
	},
	"dependencies": {
		"dedent": "^1.5.3",
		"recast": "^0.23.9",
		"tiny-glob": "^0.2.9",
		"typescript": "^5.7.2",
		"valibot": "1.0.0-beta.9"
	},
	"devDependencies": {
		"svelte": "^5.16.0",
		"vite": "^6.0.6"
	},
	"volta": {
		"extends": "../../package.json"
	}
}
