{
  "name": "@libs/utils",
  "author": "Svelte Vietnam",
  "version": "0.0.0",
  "description": "utilities for sveltevietnam.dev projects",
  "private": true,
  "svelte": "./src/index.js",
  "main": "src/index.js",
  "module": "src/index.js",
  "types": "types/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "svelte": "./src/index.js",
      "import": "./src/index.js"
    },
    "./url": {
      "types": "./types/index.d.ts",
      "svelte": "./src/url/index.js",
      "import": "./src/url/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "url": [
        "./types/index.d.ts"
      ]
    }
  },
  "files": [
    "src",
    "types"
  ],
  "scripts": {
    "lint": "run-p lint:*",
    "lint:code": "eslint . --ignore-path=\"../../.eslintignore\"",
    "format": "prettier --ignore-path ../../.prettierignore --write .",
    "test:unit": "vitest --ui --coverage",
    "test:ci": "vitest run --coverage",
    "dts": "dts-buddy && publint"
  },
  "devDependencies": {
    "@vitest/coverage-istanbul": "^0.34.1",
    "@vitest/ui": "^0.34.1",
    "dts-buddy": "^0.1.9",
    "publint": "^0.2.0",
    "vitest": "^0.34.1"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
