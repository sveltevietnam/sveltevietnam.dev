{
	"name": "@sveltevietnam/backend",
	"version": "1.0.0-next",
	"description": "Svelte Vietnam all purpose backend as a cloudflare worker",
	"private": true,
	"type": "module",
	"module": "src/worker.ts",
	"types": "./src/worker.ts",
	"exports": {
		".": {
			"types": "./src/worker.ts",
			"import": "./src/worker.ts"
		},
		"./data/subscribers/channels": {
			"types": "./src/data/subscribers/channels.ts",
			"import": "./src/data/subscribers/channels.ts"
		},
		"./data/job-postings/enums": {
			"types": "./src/data/job-postings/enums.ts",
			"import": "./src/data/job-postings/enums.ts"
		},
		"./mails": {
			"types": "./src/mjml/templates/ids.ts",
			"import": "./src/mjml/templates/ids.ts"
		},
		"./db/schema": {
			"types": "./src/database/schema.ts",
			"import": "./src/database/schema.ts"
		},
		"./db/dev": {
			"types": "./src/database/dev.ts",
			"import": "./src/database/dev.ts"
		},
		"./wrangler.json": "./wrangler.json"
	},
	"scripts": {
		"boot:env": "run-p boot:env:*",
		"boot:env:dev": "shx cp .env.example .env",
		"boot:env:test": "shx cp .env.example .env.test && shx sed -i 's/development/test/g' .env.test",
		"dev": "vite dev --port 5006",
		"dev:wrangler": "wrangler dev --port 5006 --local",
		"build:mjml": "mjml src/mjml/templates/**/*.mjml -o src/mjml/templates/output --config.minify=true --config.beautify=false",
		"build": "vite build",
		"build:test": "CLOUDFLARE_ENV=test vite build --mode test",
		"drizzle": "dotenvx run -- drizzle-kit",
		"drizzle:test": "dotenvx run -f .env.test -- drizzle-kit",
		"drizzle:production": "dotenvx run -f .env.production -- drizzle-kit",
		"preview": "vite preview",
		"deploy": "wrangler deploy",
		"lint": "eslint .",
		"format": "prettier --write --ignore-path=../../.prettierignore --config=../../prettier.config.js ."
	},
	"devDependencies": {
		"@aws-sdk/client-sesv2": "^3.919.0",
		"@cloudflare/vite-plugin": "^1.13.16",
		"@cloudflare/workers-types": "^4.20251014.0",
		"@dotenvx/dotenvx": "^1.51.0",
		"@libsql/client": "^0.15.15",
		"@paralleldrive/cuid2": "2.3.1",
		"@sveltevietnam/i18n": "workspace:*",
		"@sveltevietnam/kit": "workspace:*",
		"@tsndr/cloudflare-worker-jwt": "^3.2.0",
		"@types/mjml": "^4.7.4",
		"@types/mustache": "^4.2.6",
		"aws4fetch": "^1.0.20",
		"drizzle-kit": "^0.31.6",
		"drizzle-orm": "^0.44.7",
		"drizzle-valibot": "^0.4.2",
		"hono": "^4.10.3",
		"mjml": "^4.16.1",
		"mustache": "^4.2.0",
		"picocolors": "^1.1.1",
		"valibot": "1.1.0",
		"vite": "^7.1.12",
		"wrangler": "^4.45.1"
	},
	"dependencies": {
		"better-auth": "^1.3.34"
	},
	"volta": {
		"extends": "../../package.json"
	}
}
